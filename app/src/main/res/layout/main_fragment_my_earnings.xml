        <!--android:background="@drawable/shape_circle"-->
        <!--android:gravity="center"-->
        <!--android:text="TOTAL EARNINGS"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="20sp" />-->


        <!--<TextView-->
        <!--android:id="@+id/textView_grand_total"-->
